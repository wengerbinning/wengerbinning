% -------------------
% Title
% -------------------
\newcommand{\name}[2]{%
    	\noindent\begin{minipage}[c]{\textwidth} \centering
	{ \bfseries\huge\textcolor{#2}{#1}}
    	\end{minipage} \par\vspace{\titlesep}
}


% -------------------
% Section/Entry Definitions
% -------------------

% Section
\newcommand{\cvsection}[1]{%
	{%
\raggedright\strut{\Large\bfseries\textcolor{\sectionColor}{#1}}\par\raisebox{2ex}{\textcolor{\ruleColor}{\rule{\textwidth}{0.2ex}}}\par\vspace{-3.8ex}\textcolor{\ruleColor}{\rule{0.25\textwidth}{1.1ex}}\par\nobreak\addvspace{1ex}%
	}
}
% Subsection
\newcommand{\cvsubsection}[1]{%
	{%
\raggedright\strut{\large\bfseries\textcolor{\subsectionColor}{#1}}\hspace{2pt}\textcolor{\ruleColor}{\hrulefill}\hspace{0.5\textwidth}\phantom{x}\par\nobreak\addvspace{0.3cm}%
	}
}

% Line Entry
\newcommand{\lineentry}[2]{%
\noindent\begin{minipage}[t]{0.72\textwidth}
{#1}
\end{minipage}\hfill%
\begin{minipage}[t]{0.18\textwidth}
\begin{flushright} {\itshape #2 } \end{flushright}
\end{minipage}
}

% Triangle Entry
\newcommand{\triangleEntry}[1]{\Triangle{\bfseries\large #1} \par}


% Education Entries
\newcommand{\ed}[1]{%
\begin{minipage}[t]{0.94\textwidth}
{#1}
\end{minipage}
}

% Research Entries
\newcommand{\research}[2]{%
\begin{minipage}[t]{0.94\textwidth}
{\bfseries #1} \par
{#2}
\end{minipage}
}

% Teaching Entries
\newcommand{\teachingEntry}[2]{\noindent\hspace{0.3cm}\smallDot {#1}, \enskip{\itshape #2} \par}

% Talk Entries
\newcommand{\talk}[3]{%
\noindent\begin{minipage}[t]{0.78\textwidth}
{\itshape #1} \par
{\footnotesize #3}
\end{minipage}\hfill%
\begin{minipage}[t]{0.16\textwidth}
\begin{flushright} {\itshape #2 } \end{flushright}
\end{minipage}
}

% Service Entry 
\newcommand{\serviceEntry}[2]{\noindent\hspace{0.3cm}\smallDot {#1}, \enskip{\itshape #2} \par}